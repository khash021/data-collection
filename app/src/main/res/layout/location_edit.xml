<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/edit_location_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Location ID"
        android:layout_margin="16dp"/>

        <Button
            android:id="@+id/edit_map_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="View on map" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Select all that apply"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/edit_checkbox_garbage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Garbage"
            android:layout_marginLeft="36dp"
            android:layout_marginBottom="12dp"/>
        <CheckBox
            android:id="@+id/edit_checkbox_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Container"
            android:layout_marginLeft="36dp"
            android:layout_marginBottom="12dp"/>
        <CheckBox
            android:id="@+id/edit_checkbox_paper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paper"
            android:layout_marginLeft="36dp"
            android:layout_marginBottom="6dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/edit_comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Enter comment (optional)"
        android:textSize="10dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:inputType="textCapSentences"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <CheckBox
            android:id="@+id/edit_checkbox_inside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inside"
            android:layout_marginLeft="36dp" />

        <EditText
            android:id="@+id/edit_inside_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter details ofestablishment"
            android:textSize="10dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:layout_marginRight="36dp"
            android:inputType="textCapSentences"/>

    </LinearLayout>

    <Button
        android:id="@+id/edit_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Changes"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="6dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>



    <Button
        android:id="@+id/edit_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>